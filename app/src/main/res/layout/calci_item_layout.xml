<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="itemModel"
            type="com.slcm.slcmagroapp.views.calci.CalciItemsModel" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_background"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="5dp"
            android:src="@drawable/truck_calci_item_img" />

        <TextView
            android:id="@+id/title"
            style="@style/home_frag_texts_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EAE9FB"
            android:gravity="center"
            android:padding="3dp"
            android:text="Argo 4800"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_line" />

        <TextView
            android:id="@+id/title_one"
            style="@style/home_frag_texts_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DDDDF9"
            android:gravity="center"
            android:padding="3dp"
            android:text="1"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_line" />

        <TextView
            android:id="@+id/title_two"
            style="@style/home_frag_texts_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5D4F7"
            android:gravity="center"
            android:text="0.56"
            android:padding="3dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_line" />
    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>